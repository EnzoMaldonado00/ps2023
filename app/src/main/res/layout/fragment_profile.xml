<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture_fragment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/profile_img_marginEnd"
        android:clickable="true"
        android:layout_marginTop="@dimen/profile_img_marginTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAccessibility="no"
        android:focusable="true"/>

    <TextView
        android:id="@+id/profile_name_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="Enzo Maldonado"
        android:text="sadasdsdasd"
        android:layout_margin="@dimen/container_margin"
        app:layout_constraintStart_toEndOf="@id/profile_picture_fragment"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/profile_mail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="enzom@gmail.com"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/profile_picture_fragment"
        app:layout_constraintTop_toBottomOf="@id/profile_name_fragment"
        android:textSize="18sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>